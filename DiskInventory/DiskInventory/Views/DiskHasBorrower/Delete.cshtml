@model DiskHasBorrower
@{
    ViewBag.Title = "Delete Checkout";
}

<div class="text-center">
    <h2>@ViewBag.Title</h2>
    <br />

    <h5>Please confirm that you want to delete the checkout for:</h5>
    <br />
    <h4>@Model.Media.Title</h4>
    <br />

    <form asp-action="Delete" method="post">

        <input type="hidden" asp-for="DiskHasBorrowerId" />

        <button type="submit" class="btn btn-danger">Delete Checkout</button>&nbsp;
        <a asp-controller="DiskHasBorrower" asp-action="Index"
           class="btn btn-secondary">Cancel</a>

    </form>
</div>