@model List<Artist>

@{
    ViewData["Title"] = "Artist Page";
}

<div class="text-center">
    <h1 class="display-4">Artist List</h1>

    <h4><a asp-controller="Artist" asp-action="Add">Add an Artist</a></h4>

        <table class="table table-bordered table-striped">
            <thead>
                <tr><th>Artist ID</th><th>First Name</th><th>Last Name</th><th>Artist Type</th><th></th></tr>
            </thead>
            <tbody>
                @foreach (var artist in Model)
                {
                    <tr>
                        <td>@artist.ArtistId</td>
                        <td>@artist.FirstName</td>
                        <td>@artist.LastName</td>
                        <td>@artist.ArtistType.Description</td>
                        <td>
                            <a asp-controller="Artist" asp-action="Edit" asp-route-id="@artist.ArtistId">
                               Edit</a>
                            &nbsp;&nbsp;
                            <a asp-controller="Artist" asp-action="Delete" asp-route-id="@artist.ArtistId">
                               Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
</div>