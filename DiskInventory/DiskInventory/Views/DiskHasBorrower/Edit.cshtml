@model DiskHasBorrower
@{
    string title = ViewBag.Action + " Checkout";
    ViewBag.Title = title;
}

<h2>@ViewBag.Title</h2>

<form asp-action="Edit" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="MediaId">Title</label>
        <select asp-for="MediaId" class="form-control">
            <option value="">Select a title</option>
            @foreach (Medium m in ViewBag.Media)
            {
                <option value="@m.MediaId">@m.Title</option>
            }
        </select>
    </div>

    <div class="form-group">
        <label asp-for="BorrowerId">Borrower</label>
        <select asp-for="BorrowerId" class="form-control">
            <option value="">Select a borrower</option>
            @foreach (Borrower b in ViewBag.Borrowers)
            {
                <option value="@b.BorrowerId">@b.LastName, @b.FirstName</option>
            }
        </select>
    </div>

    <div class="form-group">
        <label asp-for="BorrowedDate">Borrowed Date</label>
        <input asp-for="BorrowedDate" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="DueDate">Due Date</label>
        <input asp-for="DueDate" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="ReturnedDate">Returned Date</label>
        <input asp-for="ReturnedDate" class="form-control">
    </div>

    <input type="hidden" asp-for="DiskHasBorrowerId" />

    <button type="submit" class="btn btn-info">@ViewBag.Action</button>&nbsp;
    <a asp-controller="DiskHasBorrower" asp-action="Index"
       class="btn btn-outline-info">Cancel</a>
</form>


