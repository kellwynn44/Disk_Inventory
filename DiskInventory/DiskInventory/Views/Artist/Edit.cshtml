@model Artist
@{
    string title = ViewBag.Action + " Artist";
    ViewBag.Title = title;
}

<h2>@ViewBag.Title</h2>

<form asp-action="Edit" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="FirstName">First Name / Group Name</label>
        <input asp-for="FirstName" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="LastName">Last Name (optional)</label>
        <input asp-for="LastName" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="ArtistTypeId">Artist Type</label>
        <select asp-for="ArtistTypeId" class="form-control">
            <option value="">Select an artist type</option>
            @foreach (ArtistType t in ViewBag.ArtistTypes)
            {
                <option value="@t.ArtistTypeId">@t.Description</option>
            }
        </select>
    </div>

    <input type="hidden" asp-for="ArtistId" />

    <button type="submit" class="btn btn-success">@ViewBag.Action</button>&nbsp;
    <a asp-controller="Artist" asp-action="Index"
       class="btn btn-secondary">Cancel</a>
</form>
