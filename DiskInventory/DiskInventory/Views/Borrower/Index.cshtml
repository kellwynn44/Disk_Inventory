@model List<Borrower>

@{
    ViewData["Title"] = "Borrower Page";
}

<div class="text-center">
    <h1 class="display-4">Borrowers</h1>

    <table class="table table-bordered table-striped">
        <thead>
            <tr><th>Borrower ID</th><th>First Name</th><th>Last Name</th><th>Phone Number</th></tr>
        </thead>
        <tbody>
            @foreach (var borrower in Model)
            {
                <tr>
                    <td>@borrower.BorrowerId</td>
                    <td>@borrower.FirstName</td>
                    <td>@borrower.LastName</td>
                    <td>@borrower.PhoneNum</td>
                </tr>
            }
        </tbody>
    </table>
</div>
