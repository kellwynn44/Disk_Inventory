@model Artist
@{
    ViewBag.Title = "Delete Artist";
}

<div class="text-center">
    <h2>@ViewBag.Title</h2>
    <br />

    <h5>Please confirm that you want to delete:</h5>
    <br />
    <h4>@Model.FirstName @Model.LastName</h4>
    <br />

    <form asp-action="Delete" method="post">

        <input type="hidden" asp-for="ArtistId" />

        <button type="submit" class="btn btn-danger">Delete Artist</button>&nbsp;
        <a asp-controller="Artist" asp-action="Index"
           class="btn btn-secondary">Cancel</a>

    </form>
</div>