@model List<Borrower>

@{
    ViewData["Title"] = "Borrower Page";
}

<div class="text-center">
    <h1 class="display-4">Borrowers</h1>
    <br />
    <h4><a asp-controller="Borrower" asp-action="Add" class="btn btn-info">Add a Borrower</a></h4>

    <table class="table table-bordered table-striped">
        <thead>
            <tr><th>Borrower ID</th><th>First Name</th><th>Last Name</th><th>Phone Number</th><th></th></tr>
        </thead>
        <tbody>
            @foreach (var borrower in Model)
            {
                <tr>
                    <td>@borrower.BorrowerId</td>
                    <td>@borrower.FirstName</td>
                    <td>@borrower.LastName</td>
                    <td>@borrower.PhoneNum</td>
                    <td>
                        <a asp-controller="Borrower" asp-action="Edit" asp-route-id="@borrower.BorrowerId" class="btn btn-info">
                            Edit
                        </a>
                        &nbsp;&nbsp;
                        <a asp-controller="Borrower" asp-action="Delete" asp-route-id="@borrower.BorrowerId" class="btn btn-outline-info">
                            Delete
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
